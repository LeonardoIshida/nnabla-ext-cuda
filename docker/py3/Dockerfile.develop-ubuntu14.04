FROM nvidia/cuda:8.0-cudnn6-devel-ubuntu14.04

RUN apt-get update && apt-get install -y --no-install-recommends \
    ccache \
    clang-format-3.8 \
    cmake \
    curl \
    g++ \
    gfortran \
    gfortran-4.8 \
    git \
    liblapack-dev \
    libopenblas-dev \
    libhdf5-dev \
    liblapack-dev \
    libopenblas-dev \
    libtool \
    make \
    python3-dev \
    python3-pip \
    unzip \
    wget \
    zip \
    zlib1g-dev

RUN pip3 install -U pip
RUN pip3 install -U wheel
ADD python/requirements.txt /tmp/deps/
RUN pip3 install -U -r /tmp/deps/requirements.txt

# Optioinal
RUN pip3 install -U ipython

# Optioinal
RUN pip3 install -U ipython

ENV CMAKE_PATH /opt/cmake-3.5.2
RUN curl -L https://cmake.org/files/v3.5/cmake-3.5.2.tar.gz -o cmake-3.5.2.tar.gz && \
    tar xvf cmake-3.5.2.tar.gz && \
    cd cmake-3.5.2 && mkdir build && cd build && cmake -D CMAKE_INSTALL_PREFIX=${CMAKE_PATH} .. && make && make install && \
    cd ../.. && rm -rf cmake-3.5.2
ENV PATH $CMAKE_PATH/bin:${PATH}


RUN curl -L https://github.com/google/protobuf/archive/v3.1.0.tar.gz -o /tmp/protobuf-v3.1.0.tar.gz \
    && cd /tmp \
    && apt-get install -y autoconf automake \
    && tar xvf protobuf-v3.1.0.tar.gz \
    && cd protobuf-3.1.0 \
    && ./autogen.sh \
    && ./configure --disable-shared\
    && make \
    && make install \
    && ldconfig \
    && chmod -R a+r /usr/local \
    && find /usr/local -type d |xargs chmod a+x
